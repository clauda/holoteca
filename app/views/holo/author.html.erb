<%
  seo [
    { property: 'description', content: "#{@resource.name}. #{@resource.try(:about)}" },
    { property: 'og:title', content: @resource.about, type: 'property' },
    { property: 'og:image', content: gravatar_url(@resource.email), type: 'property' },
    { property: 'og:description', content: @resource.about, type: 'property' },
    { property: 'twitter:title', content: @resource.name },
    { property: 'twitter:description', content: @resource.about },
    { property: 'twitter:image:src', content: gravatar_url(@resource.email) }
  ]
  title "#{@resource.name} / Holoteca"
%>

<header class="archive-header">
  <%= render partial: 'author', locals: { resource: @resource } %>
</header>

<div class='posts blog-small'>
  <% @resource.articles.visible.each do |article| %>
    <%= render partial: 'article', locals: { article: article } %>
  <% end %>
</div>