<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <title><%= yield(:title) %></title>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="google-site-verification" content="DKz_CEt64MdDmCsB91kLDxqsswCCAxRr9qERVT2Wrt8" />

    <%= yield :metatags -%>
    <meta property="fb:app_id" content="446744068790146"/>
    <meta property="og:url" content="<%= url(request.path) %>" />
    <meta property="og:site_name" content="Holoteca" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="pt_BR" />

    <meta name="twitter:site" content="@holoteca" />
    <meta name="twitter:card" content="summary_large_image" />

    <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
    <%= yield :stylesheets %>

    <link rel="canonical" href="<%= url(request.path) %>">
    <link rel="shortcut icon" type="image/x-icon" href="/favicon.ico">
    <%= csrf_meta_tags %>

    <noscript><img height="1" width="1" border="0" alt="" style="display:none" src="https://www.facebook.com/tr?id=565303960253200&amp;ev=NoScript" /></noscript>
  </head>

  <body class='page stretched'>
    <div id='fb-root'></div>
    <%= render 'shared/fixed_bar' %>

    <% cache 'header' do %>
      <header id="top">
        <%= link_to image_tag('logos/symbol-holoteca-50.png', alt: 'Holoteca', class: 'logo'), root_path, title: 'PÃ¡gina Inicial da Holoteca' %>
      </header>
    <% end %>

    <nav id="mainnav" class="hidden-xs">
      <%= render 'shared/menu' %>
    </nav>

    <div id="wrapper">
      <div class="container">
        <main>
          <div class='row'>
            <div id='content' class='col-md-8 no-gutter'><%= yield %></div>
            <%= render 'shared/sidebar' %>
          </div>
        </main>
      </div>

      <%= render 'shared/footer' %>
    </div>

    <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>

    <script type="text/javascript">
      (function() {
        var _fbq = window._fbq || (window._fbq = []);
        if (!_fbq.loaded) {
          var fbds = document.createElement('script');
          fbds.async = true;
          fbds.src = '//connect.facebook.net/en_US/fbds.js';
          var s = document.getElementsByTagName('script')[0];
          s.parentNode.insertBefore(fbds, s);
          _fbq.loaded = true;
        }
        _fbq.push(['addPixelId', '565303960253200']);
      })();
      window._fbq = window._fbq || [];
      window._fbq.push(['track', 'Initialized', {}]);
    </script>

    <script type="text/javascript">
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=true;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-2347706-21', 'holoteca.com.br');
      ga('require', 'displayfeatures');
      ga('require', 'linkid', 'linkid.js');
      ga('send', 'pageview');
    </script>

    <%= render 'shared/modal_social' %>
    <%= render 'shared/shareholic' %>
    <%= javascript_include_tag "application" %>
  </body>
</html>
