<div class="form-box" id="login-box">
  <p class="alert"><%= alert %></p>
  <div class="header"><%= link_to image_tag('logos/symbol-white-blank-holoteca.png'), root_path, class: 'logo' %></div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="body bg-gray">
      <div class="form-group">
        <%= f.email_field :email, placeholder: 'Email', class: 'form-control', autofocus: true %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, class: "form-control", placeholder: 'Senha',  autocomplete: "off" %>
      </div>

      <div class="form-group">
        <%= f.check_box :remember_me %> Lembrar-me
      </div>
    </div>

    <div class="footer">
      <%= f.submit "Entrar", class: 'btn btn-block' %>
      <p><%= link_to "Esqueceu sua senha?", new_password_path(resource_name) %></p>
    </div>
  <% end %>
</div>