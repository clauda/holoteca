<%
  seo [
    { property: 'description', content: @resource.name },
    { property: 'og:title', content: @resource.name, type: 'property' },
    { property: 'og:url', content: url_for(only_path: true), type: 'property' },
    { property: 'og:image', content: '', type: 'property' },
    { property: 'og:description', content: @resource.name, type: 'property' }
  ]
  title "#{@resource.name} / Holoteca"
%>

<header class="archive-header">
  <h1 class="page-title"><%= @resource.name %></h1>
  <p><%= @resource.summary %></p>
</header>

<div class='posts blog-small'>

  <% @resource.articles.visible.each do |article| %>

    <article class="post cat-7">

      <div class="entry-image">
        <div class="entry-category">
          <%= link_to @resource.name, category_path(@resource), title: @resource.name %>
        </div>
        <%= link_to article_path(article), title: article.title do %>
          <%= image_tag 'admin/user-bg.png', size: '200x150', alt: article.title %>
          <div class="overlay"><i class="fa fa-plus-circle"></i></div>
        <% end %>
      </div>

      <div class="entry-main">

        <h2 class="entry-title">
          <%= link_to article.title, article_path(article), title: article.title %>
        </h2>

        <div class="entry-meta">
          <span class="entry-date updated">
            <%= link_to article_path(article), title: article.title do %>
              <i class="fa fa-clock-o"></i>
              <time datetime="<%= article.published_at %>"><%= date_for article.published_at %></time>
            <% end %>
          </span>

          <span class="vcard">
            <%= link_to '#', title: article.title, class: 'url fn' do %>
              <i class="fa fa-user"></i>
              <span><%= article.author.name %></span>
            <% end %>
          </span>
        </div>

        <div class="entry-content"><%= raw article.summary %></div>
      </div>
      <div class="clear"></div>

    </article>

  <% end %>

</div>