<div class="box box-danger">
  <%= form_for([:admin, resource], html: { role: :form }) do |f| %>
    <div class="box-header">
      <h3 class="box-title">Nova Série <%= label_for resource.published unless resource.new_record? %></h3>
      <div class="box-tools">
        <div class="btn-group pull-right">
          <%= link_to raw('<i class="fa fa-caret-left"></i> Todos'), admin_books_path, class: 'btn btn-sm btn-default' %>

          <% unless resource.new_record? %>
          <%= link_to raw('<i class="fa fa-external-link"></i>'), book_path(resource), class: 'btn btn-sm btn-default' %>
          <%= link_to raw('<i class="fa fa-times"></i>'), admin_book_path(resource), class: 'btn btn-sm btn-default', method: :delete, data: { confirm: 'Tem certeza?' } %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="box-body pad">
      <div class="form-group">
        <%= f.label :title, 'Título' %>
        <%= f.text_field :title, placeholder: 'Título', class: 'form-control', required: true %>
      </div>

      <div class="form-group">
        <%= f.label :summary, 'Resumo' %>
        <%= f.text_field :summary, placeholder: 'Resumo', class: 'form-control', required: true %>
      </div>

      <% if resource.permalink %>
      <div class="form-group">
        <%= f.label :permalink %> <i>
        <%= f.text_field :permalink, class: 'form-control', disabled: true %>
      </div>
      <% end %>

      <div class="form-group">
        <label>
          <%= f.check_box :published, class: 'icheckbox_square-red' %>
          Publicar?
        </label>
      </div>
    </div>

    <div class="box-footer">
      <%= f.submit "Salvar", class: 'btn btn-default' %>
    </div>
  <% end %>
</div>