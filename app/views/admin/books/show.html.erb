<section class="content-header">
  <h1>Série <small>Artigos</small></h1>
</section>

<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box box-danger">
        <div class="box-header">
          <h3 class="box-title"></h3>
          <div class="box-tools">
          <%= label_for resource.published %>
            <div class="btn-group pull-right">
              <%= link_to raw('<i class="fa fa-caret-left"></i> Todas'), admin_books_path, class: 'btn btn-sm btn-default' %>
              <%= link_to raw('<i class="fa fa-external-link"></i>'), book_path(resource), class: 'btn btn-sm btn-default' %>
              <%= link_to raw('<i class="fa fa-plus"></i>'), new_admin_book_path, class: 'btn btn-sm btn-default' %>
              <%= link_to raw('<i class="fa fa-edit"></i>'), edit_admin_book_path(resource), class: 'btn btn-sm btn-default' %>
              <%= link_to raw('<i class="fa fa-times"></i>'), admin_book_path(resource), class: 'btn btn-sm btn-default', method: :delete, dat: { confirm: 'Tem certeza?' } %>
              <%= link_to raw('<i class="fa fa-plus"></i> Adicionar Capítulo'), chapter_admin_book_path(resource), class: 'btn btn-sm btn-default' %>
            </div>
          </div>
        </div>

        <div class="box-body">
          <h5 class='pull-right'>
            <i class="fa fa-calendar"></i> <%= date_for resource.updated_at %>
          </h5>
          <h1><%= resource.title %></h1>
          <h3><blockquote><%= raw resource.summary %></blockquote><br /></h3>
        </div>
      </div>

      <div class="box box-danger">
        <div class="box-header">
          <h3 class="box-title">Capítulos</h3>
          <div class="box-tools">
            <div class="btn-group pull-right">
              <%= link_to raw('<i class="fa fa-plus"></i> Adicionar Capítulo'), chapter_admin_book_path(resource), class: 'btn btn-sm btn-default' %>
            </div>
          </div>
        </div>

        <div class="box-body table-responsive">
          <table class="table table-hover">
            <tr>
              <th>Artigo</th>
              <th>Autor</th>
              <th>Data</th>
              <th>Status</th>
              <th></th>
            </tr>
            <% resource.articles.each do |article| %>
              <tr>
                <td><%= link_to article.title, admin_article_path(article) %></td>
                <td><%= article.author.name %></td>
                <td><%= date_for article.published_at %></td>
                <td>
                  <%= label_for article.published %>
                  <% if article.featured %><span class='label label-danger'>Destaque</span><% end %>
                </td>
                <td>
                  <div class="btn-group">
                    <%= link_to raw('<i class="fa fa-external-link"></i>'), article_path(article), class: 'btn btn-sm btn-default', title: 'Ver no Site' %>
                    <%= link_to raw('<i class="fa fa-edit"> Editar </i>'), edit_admin_article_path(article), class: 'btn btn-sm btn-default' %>
                    <%= link_to raw('<i class="fa fa-times"> Remover</i>'), admin_article_path(article), class: 'btn btn-sm btn-default', method: :delete, data: { confirm: 'Tem certeza?' } %>
                  </div>
                </td>
              </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>