<section class="content-header">
  <h1>Configurações <small>Perfil</small></h1>
</section>

<section class="content">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, role: :form }) do |f| %>

  <div class="row">
    <div class="col-md-6">

      <div class="box box-primary">
        <div class="box-header">
          <h3 class="box-title">Perfil</h3>
        </div>
        <div class="box-body">

          <div class="form-group">
            <label for="user_name">Nome</label>
            <%= f.text_field :name, placeholder: 'Email', class: 'form-control' %>
          </div>

          <div class="form-group">
            <label for="user_email">Email</label>
            <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
          </div>

          <div class="form-group">
            <label for="user_about">Sobre</label>
            <%= f.text_field :about, placeholder: 'Breve descrição', class: 'form-control' %>
          </div>

          <div class="form-group">
            <label for="user_permalink">Permalink</label>
            <%= f.text_field :permalink, placeholder: 'Permalink', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :password, 'Nova senha' %> <i>(deixe em branco se você não quiser alterar)</i>
            <%= f.password_field :password, class: 'form-control', autocomplete: "off" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, 'Confirme a nova senha' %>
            <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "off" %>
          </div>

        </div>

      </div>
    </div>

    <div class="col-md-6">
      <div class="box box-primary">
        <div class="box-header">
          <h3 class="box-title">Social</h3>
        </div>

        <div class="box-body">
          <div class='form-group'>
            <div class="input-group">
              <span class="input-group-addon">twitter</span>
              <%= f.text_field :twitter, placeholder: 'http://twitter.com/username', class: 'form-control' %>
            </div>
          </div>

          <div class='form-group'>
            <div class="input-group">
              <span class="input-group-addon">facebook</span>
              <%= f.text_field :facebook, placeholder: 'http://facebook.com/username', class: 'form-control' %>
            </div>
          </div>

          <div class='form-group'>
            <div class="input-group">
              <span class="input-group-addon">google plus</span>
              <%= f.text_field :gplus, placeholder: 'http://plus.google.com/+UserName', class: 'form-control' %>
            </div>
          </div>

          <div class='form-group'>
            <div class="input-group">
              <span class="input-group-addon">website</span>
              <%= f.text_field :site, placeholder: 'http://you.com', class: 'form-control' %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="box-footer">
        <%= f.submit "Atualizar", class: 'btn btn-default' %>
      </div>
    </div>
  </div>

  <% end %>

</section>
