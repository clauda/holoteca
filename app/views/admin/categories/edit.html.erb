<section class="content-header">
  <h1>Categorias <small>Editar</small></h1>
</section>

<section class="content">

  <div class="row">
    <div class="col-md-6">
      <div class="box box-danger">
      <%= form_for([:admin, resource], html: { role: :form }) do |f| %>
        <div class="box-header">
          <h3 class="box-title">Categoria <b><%= resource.name %></b></h3>
        </div>
        <div class="box-body">
          <div class="form-group">
            <%= f.text_field :name, placeholder: 'Nome', class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.text_area :summary, placeholder: 'Descrição', class: 'form-control' %>
          </div>

        </div>
        <div class="box-footer">
          <%= f.submit "Salvar", class: 'btn btn-default' %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</section>