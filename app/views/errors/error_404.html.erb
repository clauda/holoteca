<%
  seo [
    { property: 'description', content: "O Holoteca é uma revista sobre diversos assuntos." },
    { property: 'og:title', content: "O Holoteca é uma revista sobre diversos assuntos.", type: 'property' },
    { property: 'og:image', content: image_url('logos/logo-square-holoteca.png'), type: 'property' },
    { property: 'og:description', content: "O Holoteca é uma revista sobre diversos assuntos.", type: 'property' }
  ]
  title "Não Encontrado / Holoteca"
%>

<header class="archive-header">
  <br />
  <h1 class="page-title">Não encontramos o artigo que você procurava. :'(</h1>
</header>

<div class='posts blog-small'>
  <article class="post">
    <div class="entry-main">

      <h2 class="entry-title">
        A página que você está procurando não existe, mas continue navegando e boa leitura!
      </h2>
    </div>
  </article>
</div>

<div class="posts blog-large">
  <div class="row">
    <% @featured.each do |article| %>
      <% cache([article, "featured-card"]) do %>
        <article class="col-sm-12 post <%= article.category.try(:permalink) %>">
          <div class="entry-image">
            <div class="entry-category">
              <% if article.category %><%= link_to article.category.name, category_path(article.category) %><% end %>
            </div>
            <%= link_to article_path(article), title: article.title do %>
              <%= image_tag cover(article.cover_url), class: 'img-responsive', alt: article.title %>
              <div class="overlay"><i class="fa fa-plus-circle"></i></div>
            <% end %>
          </div>

          <div class="entry-main">
            <h2 class="entry-title">
              <%= link_to article.title, article_path(article) %>
            </h2>
            <div class="entry-meta">
              <span class="entry-date updated">
                <%= link_to article_path(article), title: article.title do %>
                  <i class="fa fa-clock-o"></i>
                  <time datetime="<%= moment_for(article.published_at) %>"><%= date_for article.published_at %></time>
                <% end %>
              </span>
              <span class="vcard">
                <%= link_to author_path(article.author), class: 'url fn', title: article.author.name do %>
                  <i class="fa fa-user"></i>
                  <span><%= article.author.name %></span>
                <% end %>
              </span>
            </div>
            <div class="entry-content"><%= raw article.summary %></div>
          </div>
        </article>
      <% end %>
    <% end %>
  </div>
</div>

