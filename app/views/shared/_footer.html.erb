<% cache 'feet' do %>
<div id="footer-area">
  <div id="footer-widget">
    <div class="container">
      <div class="row">

        <div class="col-md-4 col-sm-6">
          <div class="widget widget_text">
            <div class="textwidget">
              <p><%= link_to image_tag('logos/brand-white.png', alt: 'Holoteca'), root_path, title: 'Holoteca' %></p>
              <p>
                <b>holo-</b> | <i>pref.</i> do grego: significa inteiro, todo.<br />
                <b>-teca</b> |é| <i>suf.</i> do latim: coleção ou local de armazenamento.
              </p>
            </div>
          </div>
        </div>

        <div class="col-md-4 col-sm-3 col-xs-6">
          <ul class='links'>
            <li><%= link_to 'Início', root_path, title: 'Página Inicial do Holoteca' %></li>
            <li><%= link_to 'Política de Privacidade', privacy_path, title: 'Política de Privacidade' %></li>
            <li><%= link_to 'Contato', contact_path, title: 'Anuncie ou Fale Conosco' %></li>
          </ul>
        </div>
          
        <% cache('bottom_menu', skip_digest: true) do %>
          <div class="col-xs-6 visible-xs">
            <ul class='links'>
              <% @categories.each do |category| %>
                <li class="menu-item">
                  <%= link_to category.name, category_path(category), title: category.name %>
                </li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="col-md-4 col-sm-3 col-xs-12 clearfix">
          <h4><b>Receba as novidades do Holoteca</b></h4>
          <%= form_tag(subscribe_path, method: :post, remote: true, class: 'is-subscription') do %>
            <div class="input-group">
              <%= email_field_tag :email, nil, placeholder: 'seu@email.com.br', class: 'form-contral subscribe', required: true %>
              <%= button_tag 'ASSINE', class: 'btn btn-danger' %>
            </div>
          <% end %>
        </div>

      </div>
    </div>
  </div>

  <footer id="bottom">
    <div class="container">
      <div class="row">
        <div class="col-sm-3 footer1">

          <div class="widget widget_g7_social">
            <ul class="horizontal circle">
              <li class="social-facebook">
                <a href="http://facebook.com/holoteca" title="Holoteca Fan Page">
                  <span class="social-box"><i class="fa fa-facebook"></i></span>
                </a>
              </li>

              <li class="social-google">
                <a href="https://plus.google.com/u/0/b/104599330917809356324/104599330917809356324/posts" title="Holoteca no Google Plus">
                  <span class="social-box"><i class="fa fa-google-plus"></i></span>
                </a>
              </li>

              <li class="social-instagram">
                <a href="http://instagram.com/holoteca" title="Holoteca no Instagram">
                  <span class="social-box"><i class="fa fa-instagram"></i></span>
                </a>
              </li>

              <li class="social-twitter">
                <a href="http://twitter.com/holoteca" title="Holoteca no Twitter">
                  <span class="social-box"><i class="fa fa-twitter"></i></span>
                </a>
              </li>
            </ul>
            <div class="clear"></div>
          </div>
        </div>

        <div class="col-sm-9 footer2">
          <a href="http://wipcodes.com" title='desenvolvimento wipcodes' class='pull-right wipcodes'>
            <%= image_tag('logos/wipcodes.png', alt: 'wipcodes') %></a>
          <span class='pull-right'>Copyright © 2015 Holoteca.</span>
        </div>
      </div>
    </div>
  </footer>
</div>
<% end %>